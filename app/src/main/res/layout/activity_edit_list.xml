<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.lists.edit.EditListActivity">

    <EditText
        android:id="@+id/edit_list_title_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/edit_list_name_label"
        style="@style/editTextStyle"/>

    <Spinner
        android:id="@+id/edit_list_category_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_list_category_label"
        style="@style/categorySpinnerStyle"/>

    <TextView
        android:id="@+id/edit_list_category_label"
        android:text="@string/edit_list_category_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_list_title_input"
        style="@style/formTextViewStyle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_list_button"
        app:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/deleteButtonStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>