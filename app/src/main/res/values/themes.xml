        <item name="colorPrimary">@color/theme_blue</item>
        <item name="colorPrimaryVariant">@color/theme_light_blue</item>
        <item name="colorOnPrimary">@color/theme_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_dark_blue</item>
        <item name="colorSecondaryVariant">@color/theme_grey</item>
        <item name="colorOnSecondary">@color/theme_black</item>
